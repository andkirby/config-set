<?xml version="1.0"?>
<config>
    <sections>
        <dev>
            <groups>
                <andKirby_configSet translate="label">
                    <label>Configuration Importing</label>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <upload_config_file translate="label comment">
                            <label>Upload configuration CSV file</label>
                            <comment><![CDATA[Please follow the format: config_path, value]]></comment>
                            <frontend_type>file</frontend_type>
                            <backend_model>andKirby_configSet/system_config_backend_csv</backend_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </upload_config_file>
                        <show_config_path translate="label comment">
                            <label>Show Configuration XPath</label>
                            <comment>This option will be saved in session because script can overload page loading.
                            </comment>
                            <frontend_type>select</frontend_type>
                            <backend_model>andKirby_configSet/system_config_backend_showPath</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </show_config_path>
                    </fields>
                </andKirby_configSet>
            </groups>
        </dev>
    </sections>
</config>
